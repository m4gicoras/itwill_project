<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.m4gi.mapper.ProductMapper">

<!-- mybatis-config에 alias설정 후 resultType은 짧게 Product로 등록함 -->
<select id="selectProductsByCompany" resultType="Product">
    SELECT * FROM Products WHERE company_id = #{companyId}
</select>

<select id="selectProductsByCompanyAndStatus" resultType="Product">
    SELECT * FROM Products WHERE company_id = #{companyId} AND status = #{status}
</select>

</mapper>
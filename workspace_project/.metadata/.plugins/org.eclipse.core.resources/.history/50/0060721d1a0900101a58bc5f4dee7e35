package com.itwillbs.web;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

@Controller
public class SampleController4 {
	
	private static final Logger logger = LoggerFactory.getLogger(SampleController4.class);
	
	@RequestMapping(value = "/doD", method = RequestMethod.GET)
	public String doD(RedirectAttributes rttr) {
		
		//return "redirect:/doE";
		//logger.info("msg : " + msg);
		rttr.addAttribute("msg","fire");
		rttr.addFlashAttribute("msg","flash-fire");
		return "redirect:/doE";
	}
	
	@RequestMapping(value = "/doE", method = RequestMethod.GET)
	public void doE(@ModelAttribute("msg") String msg) {
		
		logger.info("Called doE()");
		logger.info("E : " + msg);
		
		return;
		
	}
	
}

	private static final Logger logger = LoggerFactory.getLogger(ControllerTest.class);
	
	@Inject
	private WebApplicationContext wac;
	
	private MockMvc mock;
	
	public void setup() {
		logger.info("setup start");
		
		logger.info("setup end");
	}
}
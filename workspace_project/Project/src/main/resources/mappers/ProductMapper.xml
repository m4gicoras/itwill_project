<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.m4gi.mapper.ProductMapper">

<select id="selectProductsByCompany" parameterType="int" resultType="com.m4gi.domain.Product">
    SELECT * FROM products WHERE company_id = #{companyId}
</select>

<select id="selectProductsByCompanyAndStatus" parameterType="map" resultType="com.m4gi.domain.Product">
    SELECT * FROM products WHERE company_id = #{companyId} AND status = #{status}
</select>

</mapper>